{
  "ConnectionStrings": {
    "MainDb": "Host=localhost;Port=5433;Database=backendtemplate_main;Username=postgres;Password=postgres",
    "AuditDb": "Host=localhost;Port=5433;Database=backendtemplate_audit;Username=postgres;Password=postgres",
    "Hangfire": "Host=localhost;Port=5433;Database=backendtemplate_hangfire;Username=postgres;Password=postgres"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Elastic.Serilog.Sinks" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Hangfire": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] TraceId={TraceId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ElasticLogging": {
    "Enabled": false,
    "Nodes": [ "http://localhost:9200" ]
  },
  "AuditOutbox": {
    "BatchSize": 100,
    "Cron": "*/10 * * * * *"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
